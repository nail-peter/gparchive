# Connection Mode (set to true for VPN, false for HTTP proxy)
USE_VPN=true

# UK Proxy Configuration (only needed if USE_VPN=false)
PROXY_HOST=your-proxy-host.com
PROXY_PORT=8080
PROXY_USERNAME=your-username
PROXY_PASSWORD=your-password

# Radio Station URLs
BBC_RADIO_URL=https://www.bbc.co.uk/iplayer/radio
BBC_API_BASE=https://www.bbc.co.uk/programmes

# Archive Settings
ARCHIVE_DIR=./archive
MAX_FILE_SIZE_MB=500

# BBC Account Credentials (for authenticated downloads)
BBC_EMAIL=your-email@example.com
BBC_PASSWORD=your-bbc-password

# Audio Player Server Settings
PORT=3000
PLAYER_USERNAME=admin
PLAYER_PASSWORD=changeme123

# Cloudflare R2 Storage Configuration
# Get these from your Cloudflare dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-bucket-name